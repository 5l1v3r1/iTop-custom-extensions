	<classes>
		<class id="Location">
			<fields> 
				<!-- takes up to 64kb -->
				<field id="geom" xsi:type="AttributeText" _delta="define">
					<sql>geom</sql>
					<default_value/>
					<is_null_allowed>true</is_null_allowed>
				</field>
			</fields>
			<presentation>
				<details>
					<items> 
						<item id="geom" _delta="define">
							<rank>150</rank>
						</item>
					</items>
				</details>
			</presentation>
		</class>
		<class id="UserRequest">
			<fields> 
				<!-- takes up to 64kb -->
				<field id="geom" xsi:type="AttributeText" _delta="define">
					<sql>geom</sql>
					<default_value/>
					<is_null_allowed>true</is_null_allowed>
				</field>
			</fields>
			<presentation>
				<details>
					<items> 
						<item id="geom" _delta="define">
							<rank>150</rank>
						</item>
					</items>
				</details>
			</presentation>
		</class>
	</classes>
	<module_parameters>
		<parameters id="jb-geom" _delta="define">
			<!-- Parameters are case sensitive! -->
			<!-- Defaults -->
			<default>
				<!-- Dataformat. Features are stored in this format. WKT or GeoJSON -->
				<dataformat type="string" _delta="define">WKT</dataformat>
				<!-- Data CRS. Features are stored in this CRS. Often EPSG:3857 (CRS used by Google Maps, OpenStreetMap WMS) or EPSG:4326 (GeoJSON. CRS used by Google Earth, OpenStreetMap database) -->
				<datacrs type="string" _delta="define">EPSG:3857</datacrs>
				<!-- Currently allowed datatypes are Point, LineString and Polygon. SinglePoint versions, MultiPoint is currently unsupported. -->
				<datatypes type="array" _delta="define">
					<datatype id="0">Point</datatype>
					<datatype id="1">LineString</datatype>
					<datatype id="2">Polygon</datatype>
				</datatypes>
				<!-- CRS in which the map is displayed -->
				<mapcrs type="string" _delta="define">EPSG:3857</mapcrs>		
				<!-- Where the map is centered by default (when there's no feature yet) -->		
				<mapcenter type="array" _delta="define">
					<coord id="0">358652.11242031807</coord>
					<coord id="1">6606360.84951076</coord>
				</mapcenter>
				<!-- Map zoom level -->
				<mapzoom type="int" _delta="define">17</mapzoom>
			</default>
			<!-- Class specific options can be set. All parameters above can be used in a node at this level called <classname/> -->
		</parameters>
	</module_parameters>
	<meta>
		<!-- Meta is for ITSM Designer -->
		<dashlets>
			<dashlet id="DashletMapOverview" _delta="define">
				<label>Map Overview</label>
				<icon>jb-geom/images/map.png</icon>
				<description>A map showing items of a specified class.</description>
				<configuration>
					<url>http://via.placeholder.com/600x300</url>
					<width>600</width>
					<height>300</height>
				</configuration>
			</dashlet>
		</dashlets>
	</meta>
</itop_design>