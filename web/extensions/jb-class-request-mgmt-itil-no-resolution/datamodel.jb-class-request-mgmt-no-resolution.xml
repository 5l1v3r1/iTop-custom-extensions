<?xml version="1.0" encoding="UTF-8"?>
<itop_design xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.4">
	<classes>
		<!-- To avoid future conflicts, we won't delete the resolution_code and solution fields. We'll hide them and make them optional. -->
		<class id="UserRequest"> 
			<lifecycle> 
				<states>   
					<state id="resolved"> 
						<flags> 
							<attribute id="resolution_code">
								<mandatory/>
								<must_prompt/>
							</attribute>
							<attribute id="solution">
								<mandatory/>
								<must_prompt/>
							</attribute>
						</flags>  
					</state> 
				</states>
			</lifecycle>
		</class>
	</classes> 
</itop_design>
