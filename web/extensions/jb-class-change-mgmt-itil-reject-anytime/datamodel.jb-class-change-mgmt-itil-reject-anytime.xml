  <classes>  
    <class id="RoutineChange"> 
      <lifecycle> 
        <states>  
          <state id="assigned">  
            <transitions> 
			  <transition id="ev_reject" _delta="define">
                <target>rejected</target>
                <actions/>
              </transition>
            </transitions>
          </state>  
          <state id="plannedscheduled">  
            <transitions> 
              <transition id="ev_reject" _delta="define">
                <target>rejected</target>
                <actions/>
              </transition>
            </transitions>
          </state>
          <state id="approved">  
            <transitions> 
              <transition id="ev_reject" _delta="define">
                <target>rejected</target>
                <actions/>
              </transition>
            </transitions>
          </state>
          <state id="notapproved">
            <transitions> 
              <transition id="ev_reject" _delta="define">
                <target>rejected</target>
                <actions/>
              </transition>
            </transitions> 
          </state>
        </states>
      </lifecycle> 
    </class>
	
	<!-- ApprovedChange is abstract class for NormalChange, EmergencyChange. No changes needed. -->
    <class id="ApprovedChange">    
    </class>
	
	
    <class id="NormalChange"> 
      <lifecycle> 
        <states> 
          <state id="validated"> 
            <transitions> 
			  <transition id="ev_reject" _delta="define">
                <target>rejected</target>
                <actions/>
              </transition>
            </transitions>
          </state> 
          <state id="assigned"> 
            <transitions> 
			   <transition id="ev_reject" _delta="define">
                <target>rejected</target>
                <actions/>
              </transition>
            </transitions>
          </state>
          <state id="plannedscheduled">  
            <transitions> 
              <transition id="ev_reject" _delta="define">
                <target>rejected</target>
                <actions/>
              </transition>
            </transitions>
          </state>
          <state id="approved">  
            <transitions> 
              <transition id="ev_reject" _delta="define">
                <target>rejected</target>
                <actions/>
              </transition>
            </transitions>
          </state>
          <state id="notapproved">  
            <transitions> 
              <transition id="ev_reject" _delta="define">
                <target>rejected</target>
                <actions/>
              </transition>			  
            </transitions>
          </state> 
		</states>
      </lifecycle>  
 
    </class>
	
